<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="4dp"
        android:maxWidth="256dp"
        android:minWidth="40dp"
        android:background="@drawable/bg_incoming_message"
        android:paddingHorizontal="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="10dp"
        android:textColor="@color/textOrIcons"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="12dp"
        android:layout_marginEnd="12dp"
        android:textSize="8sp"
        android:textColor="@color/dividerColor"
        app:layout_constraintEnd_toEndOf="@id/message_text"
        app:layout_constraintBottom_toBottomOf="@+id/message_text"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>